<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.rubahapi.moviedb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".mainnavigator.MainActivityNavigator"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".DetailMovieActivity" android:parentActivityName=".mainnavigator.MainActivityNavigator">
        </activity>
        <receiver android:name="com.rubahapi.moviedb.widget.LatestMovie">
           <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/image_banner_widget_info" />
        </receiver>
      
        <service
                android:name="com.rubahapi.moviedb.widget.StackWidgetService"
                android:permission="android.permission.BIND_REMOTEVIEWS" />
        <provider
                android:authorities="com.rubahapi.moviedb.provider.MovieProvider"
                android:name=".provider.MovieProvider"
            android:enabled="true" android:exported="true"/>
      
        <provider
                android:authorities="com.rubahapi.moviedb.provider.TVShowProvider"
                android:name=".provider.TVShowProvider"
                android:enabled="true" android:exported="true"/>
    </application>

</manifest>