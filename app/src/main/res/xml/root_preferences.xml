<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
                app:key="@string/release_reminder_key"
                app:title="@string/release_reminder"
                app:summaryOff="@string/release_reminder_off"
                app:summaryOn="@string/release_reminder_on"
                app:defaultValue="true"/>

        <SwitchPreferenceCompat
                app:key="@string/daily_reminder_key"
                app:summaryOff="@string/daily_reminder_off"
                app:summaryOn="@string/daily_reminder_on"
                app:title="@string/daily_reminder"
                app:defaultValue="true"/>

    </PreferenceCategory>

</PreferenceScreen>
